<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <!-- Back button positioned like question mark in expansion selector -->
    <RelativeLayout
        android:id="@+id/backButtonContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true">
        <FrameLayout
            android:id="@+id/backButtonFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />
    </RelativeLayout>
    
    <!-- ViewPager for cards - positioned below back button -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/backButtonContainer"
        android:layout_above="@+id/navigationContainer"
        android:padding="0dip" />
    
    <!-- Navigation container at bottom -->
    <LinearLayout
        android:id="@+id/navigationContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80000000">
        
        <!-- Left arrow button -->
        <ImageButton
            android:id="@+id/leftArrowButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous card"
            android:layout_marginEnd="16dp" />
        
        <!-- Card counter -->
        <TextView
            android:id="@+id/cardCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 of 1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp" />
        
        <!-- Right arrow button -->
        <ImageButton
            android:id="@+id/rightArrowButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next card"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</RelativeLayout>

